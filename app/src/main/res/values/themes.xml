<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SDA_care" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_yellow</item>
        <item name="colorPrimaryVariant">@color/theme_yellow</item>
        <item name="colorOnPrimary">@color/theme_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="MainBackgroundColor">
        <item name="android:background">@color/theme_yellow</item>
    </style>
    <style name="ContainerBackgroundColor">
        <item name="android:background">@color/theme_black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
        <item name="android:background">@color/theme_black</item>
    </style>

    <style name="Title">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <style name="IdentificationActivityTitle">
        <item name="android:fontFamily">@font/sb_aggro_l</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/theme_black</item>
    </style>

    <style name="InputTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
        <item name="android:paddingStart">4dp</item>
    </style>

    <style name="InputBox">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#434343</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
        <item name="android:background">@color/white</item>
        <item name="android:width">250dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>