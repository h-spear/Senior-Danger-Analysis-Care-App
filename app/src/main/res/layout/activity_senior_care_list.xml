<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/theme_yellow"    tools:context=".Activity.SeniorCareListActivity">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_gravity="center"        android:gravity="center"        android:paddingTop="10dp"        android:orientation="vertical">        <TextView            android:layout_width="match_parent"            android:layout_height="70dp"            android:text="현재 관리중인 시니어"            android:gravity="center"            android:textSize="24sp"            style="@style/Title"/>        <!-- List Container --><!--        <ScrollView--><!--            android:layout_width="match_parent"--><!--            android:layout_height="0dp"--><!--            android:layout_weight="8">-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center">                <LinearLayout                    android:layout_width="310dp"                    android:layout_height="310dp"                    android:orientation="vertical"                    android:layout_gravity="center"                    android:gravity="center"                    android:background="@color/theme_black"                    android:padding="10dp"                    android:layout_margin="10dp">                    <TextView                        android:id="@+id/textViewSeniorName"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:textSize="44sp"                        android:textAlignment="center"                        android:text=""                        android:textColor="@color/white"                        style="@style/InputTitle"/>                    <TextView                        android:id="@+id/textViewSeniorPhone"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:textSize="24sp"                        android:textAlignment="center"                        android:text="없음"                        android:textColor="@color/white"                        style="@style/InputTitle"/>                    <TextView                        android:id="@+id/textViewSeniorAddress"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:textSize="20sp"                        android:textAlignment="center"                        android:layout_marginTop="20dp"                        android:text=""                        android:textColor="@color/white"                        style="@style/InputTitle"/>                </LinearLayout>            </LinearLayout><!--        </ScrollView>-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginBottom="20dp"            android:orientation="vertical">            <Button                android:layout_width="310dp"                android:id="@+id/seniorCallButton"                style="@style/ButtonStyle"                android:layout_gravity="center"                android:background="@color/theme_black"                android:layout_marginTop="20dp"                android:text="전화하기"/>            <Button                android:layout_width="310dp"                android:id="@+id/logoutButton"                style="@style/ButtonStyle"                android:layout_gravity="center"                android:background="@color/theme_black"                android:layout_marginTop="20dp"                android:text="로그아웃"/>        </LinearLayout>    </LinearLayout></LinearLayout>