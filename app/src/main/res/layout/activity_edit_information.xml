<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    style="@style/MainBackgroundColor"
    tools:context=".Activity.EditInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원정보 수정"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="40dp"
                style="@style/Title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                style="@style/ContainerBackgroundColor">

                <!-- 이름 입력 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        style="@style/InputTitle"/>

                    <EditText
                        android:id="@+id/editTextUpdateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="name"
                        android:textSize="18dp"
                        android:inputType="textPersonName"
                        style="@style/InputBox"/>

                </LinearLayout>

                <!-- 연락처 입력 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        style="@style/InputTitle"/>

                    <EditText
                        android:id="@+id/editTextUpdatePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="phone number"
                        android:textSize="18dp"
                        android:inputType="phone"
                        style="@style/InputBox"/>
                </LinearLayout>

                <!-- Password 변경 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="현재 비밀번호"
                        style="@style/InputTitle"/>

                    <EditText
                        android:id="@+id/editTextCurrentPwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="current password"
                        android:textSize="18dp"
                        android:inputType="textPassword"
                        style="@style/InputBox"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="새 비밀번호"
                        style="@style/InputTitle"/>

                    <EditText
                        android:id="@+id/editTextChangePwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="new password"
                        android:textSize="18dp"
                        android:inputType="textPassword"
                        style="@style/InputBox"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="새 비밀번호 확인"
                        style="@style/InputTitle"/>

                    <EditText
                        android:id="@+id/editTextChangePwd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="한 번 더 입력하세요."
                        android:textSize="18dp"
                        android:inputType="textPassword"
                        style="@style/InputBox"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="310dp"
                android:id="@+id/updateButton"
                style="@style/ButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="변경하기"/>

            <Button
                android:layout_width="310dp"
                android:id="@+id/logoutButton"
                style="@style/ButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="로그아웃"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>